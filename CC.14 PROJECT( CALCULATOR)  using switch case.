#include<stdio.h>
int main()
{
    double num1,num2;
    char operator;
    printf("enter the operators(+,-,*,/):");
    scanf("%c",&operator);
    printf("Enter two operands:");
    scanf("%lf %lf",&num1,&num2);
    switch(operator)
    {
        case'+': printf("%.2lf+%.2lf=%.2lf",num1,num2,num1+num2);
        break;
         case'-': printf("%.2lf-%.2lf=%.2lf",num1,num2,num1-num2);
        break;
         case'*': printf("%.2lf*%.2lf=%.2lf",num1,num2,num1*num2);
        break;
         case'/': printf("%.2lf/%.2lf=%.2lf",num1,num2,num1/num2);
        break;
        default: printf("invalid");
    }
    return 0;
}
