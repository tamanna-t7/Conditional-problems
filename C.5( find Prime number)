#include<stdio.h>
int main()
{
    int i,num,count=0;
    printf("please enter a number=");
    scanf("%d",&num);
     for(i=2;i<=num;i++)
     {
         if(num%i==0)
         {
             count++;
         }
          break;
     }
     if(count==0)
     {
         printf("its a prime number\n",num);

     }
    else
    {
        printf("its not a prime number\n",num);
    }

}
